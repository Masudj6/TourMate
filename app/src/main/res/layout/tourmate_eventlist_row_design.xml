<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:elevation="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center"
    android:background="@drawable/border"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/locationNameTv"
        android:layout_width="match_parent"
        android:text="Narayanganj"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="bold|normal"
        android:textColor="#1a0196"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fromDateTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="From: 22 Oct 2017"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textStyle="bold|normal"
            android:textColor="#0a0a0a"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/toDateTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="To: 25 Oct 2017"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:textStyle="bold|normal"
            android:textColor="#0a0a0a"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/budgetTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget: 2000/tk"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="serif"
        android:layout_gravity="center"
        android:textStyle="bold|normal"
        android:textColor="#0a0a0a"/>



</LinearLayout>